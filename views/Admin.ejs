<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="logo cas blue.png">
    <link rel="stylesheet" href="Admin.css">
    <script src="https://kit.fontawesome.com/7e29f98d58.js" crossorigin="anonymous"></script>
    <title>cas</title>
</head>
<body>
    <header>
        <div class="logo">
            <a href="#">CAS</a>
        </div>
        <nav class="navigation">
            <a href="#">Accueil</a>
            <a href="#">Profile</a>
            <a href="#comingActivities">Prochaines activités</a>
            <a href="#"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
        </nav>
        <div class="recherche">
           <form id="rechercher">
            <input type="text" placeholder="Rechercher...">
            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
           </form> 
        </div>
    </header>

    <main>
        <div class="profile">
            <div class="profilePic"></div>
            <div class="profileInfos">
                <table>
                    <tr>
                        <td>Nom</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Prénom</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Filière</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>INE</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Téléphone</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Score</td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
        <form id="ajouter" action="/ajouter-activite" method="POST">
            <label for="titre">Titre :</label>
            <input type="text" id="titre" name="titre">
    
            <label for="date">Date :</label>
            <input type="date" id="date" name="date">
    
            <label for="heure">Heure :</label>
            <input type="time" id="heure" name="heure">
    
            <label for="localisation">Localisation :</label>
            <input type="text" id="localisation" name="localisation">
    
            <label for="description">Description :</label>
            <textarea id="description" name="description" rows="4"></textarea>
    
            <button type="submit">Ajouter l'activité</button>
        </form>
    </main>
    <section id="comingActivities">
        <div class="annonceTitle">
            <h1>Prochaines activités</h1>
        </div>

        <div class="annonce">
            <% if (activities && activities.length > 0) { %>
                    <% activities.forEach(activity => { %>
                         <div class="content">
                                <h2><%= activity.titre %></h2>
                                <p>Date: <%= activity.date %></p>
                                <p>Heure: <%= activity.heure %></p>
                                <p>Localisation: <%= activity.localisation %></p>
                                <p> <%= activity.description %> </p>
                                <button class="supprimer">Supprimer</button>
                        </div>
                    <% }); %>
            <% } else { %>
                <p>aucune activité pour le moment</p>
            <% } %>
        </div>
    </section>
    
</body>
</html>